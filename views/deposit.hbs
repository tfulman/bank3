<!DOCTYPE html>
<html>
	<head>
		<title>BOP - Deposit</title>
		<base href="/">
		<link rel="stylesheet" href="/views/bank.css">
	</head>
	<body>
		<div class="spacer"></div>
		<div class="balanceWrapper">
			<form action="/bankActionsDeposit" id="bankActions3" method="POST">
				<input type="hidden" id="txtAccountName" name="txtAccountName" value="{{ username }}">
				<input type="hidden" id="txtAccountNumber" name="txtAccountNumber" value="{{ account_number }}">
				<div class="accountBalanceWrapper">
					<span class="">Account Number {{ account_number }}</span>
					<div>Amount <input type="text" id="txtDepositSum" name="txtDepositSum" value=""></div>
				</div>
				<div class="centered">
					<input id="depositSubmit" type="submit" value="Submit">
					<input id="cancelDeposit" type="button" value="Cancel">
				</div>
			</form>
		</div>
	</body>
</html>
